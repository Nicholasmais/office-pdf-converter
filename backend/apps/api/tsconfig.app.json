{
  "compilerOptions": {
    "outDir": "../../dist/apps/api",
    "rootDir": "../../",
    "baseUrl": "./",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
        "prisma/*": ["../../prisma/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist"]
}
